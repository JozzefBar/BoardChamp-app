<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Header with the name a buttons -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <TextView
                    android:id="@+id/tvGameName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scrabble"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSecondary"/>

            <ImageButton
                    android:id="@+id/btnEditSession"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit session"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#2196F3"
                    android:layout_marginRight="12dp"/>

            <ImageButton
                    android:id="@+id/btnDeleteSession"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete session"
                    android:tint="#FF6B6B"/>

        </LinearLayout>

        <!-- Time range -->
        <TextView
                android:id="@+id/tvTimeRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19:30 - 21:45"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"
                android:drawablePadding="8dp"
                android:drawableStart="@android:drawable/ic_menu_recent_history"/>

        <!-- Duration -->
        <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 2h 15m"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#888888"
                android:layout_marginBottom="12dp"/>

        <!-- Players section header -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Players:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginBottom="6dp"
                android:drawablePadding="8dp"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"/>

        <!-- Players list container -->
        <LinearLayout
                android:id="@+id/playersListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorSurfaceVariant"
                android:padding="8dp">
        </LinearLayout>

        <!-- Notes (optional) -->
        <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes: Great game, close finish!"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:background="?attr/colorSurfaceVariant"
                android:padding="8dp"
                />

    </LinearLayout>
</androidx.cardview.widget.CardView>