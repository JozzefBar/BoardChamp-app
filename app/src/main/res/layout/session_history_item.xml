<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Header s nÃ¡zvom hry a delete button -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

            <TextView
                    android:id="@+id/tvGameName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scrabble"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

            <ImageButton
                    android:id="@+id/btnDeleteSession"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete session"
                    android:tint="#FF6B6B"/>
        </LinearLayout>

        <!-- Time range -->
        <TextView
                android:id="@+id/tvTimeRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19:30 - 21:45"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@android:drawable/ic_menu_recent_history"/>

        <!-- Duration -->
        <TextView
                android:id="@+id/tvDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 2h 15m"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#888888"
                android:layout_marginBottom="8dp"/>

        <!-- Players info -->
        <TextView
                android:id="@+id/tvPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Players: John (85pts), Mary (72pts), Bob (91pts)"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#333333"
                android:layout_marginBottom="4dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@android:drawable/ic_menu_my_calendar"/>

        <!-- Notes (optional) -->
        <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes: Great game, close finish!"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#666666"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:background="#F9F9F9"
                android:padding="8dp"
                android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>